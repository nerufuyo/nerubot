# NeruBot Configuration
# Copy to .env and fill in values.

# --- Required ---
DISCORD_TOKEN=your_discord_bot_token

# --- AI Chatbot ---
DEEPSEEK_API_KEY=your_deepseek_api_key

# --- Database (required) ---
MONGO_URL=mongodb://user:password@host:port
MONGO_DB=nerufuyo

# --- Redis (optional — enables persistent chat sessions) ---
REDIS_URL=redis://default:password@host:port

# --- Backend API (RAG knowledge & bot settings from dashboard) ---
BACKEND_URL=

# --- Features (true/false) ---
ENABLE_MUSIC=false
ENABLE_CONFESSION=true
ENABLE_ROAST=true
ENABLE_REMINDER=true

# --- Music (optional) ---
LAVALINK_ENABLED=false
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass

# --- Whale Alert (optional) ---
WHALE_ALERT_API_KEY=

# --- Reminder Channel (optional) ---
# Discord channel ID for reminders. Leave blank — users can set it with /reminder-set.
REMINDER_CHANNEL_ID=

# --- Runtime ---
LOG_LEVEL=INFO
ENVIRONMENT=development
MAX_QUEUE_SIZE=100
