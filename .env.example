# NeruBot Environment Configuration
# Copy this file to .env and configure your settings

# === REQUIRED SETTINGS ===
# Discord Bot Token (REQUIRED)
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# === OPTIONAL MUSIC SETTINGS ===
# Spotify Integration (Optional - for better music search)
# Get from: https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# === BOT CONFIGURATION ===
# Bot command prefix (default: !)
COMMAND_PREFIX=!

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# === MUSIC SETTINGS ===
# Maximum songs in queue per server
MAX_QUEUE_SIZE=100

# Enable 24/7 mode by default (true/false)
ENABLE_24_7=true

# Auto-disconnect timeout in seconds (0 = disabled)
AUTO_DISCONNECT_TIME=300

# Audio quality settings
FFMPEG_OPTIONS=-vn -f opus

# === ADVANCED SETTINGS ===
# Bot activity status
BOT_STATUS=ðŸŽµ Music for everyone!

# Enable developer mode (additional logging and features)
DEVELOPER_MODE=false

# Database settings (if using database features)
DATABASE_URL=

# Redis settings (if using caching)
REDIS_URL=

# === DEPLOYMENT SETTINGS ===
# Environment (development, production)
ENVIRONMENT=production

# Port for health checks (if applicable)
HEALTH_CHECK_PORT=8080

# === LOGGING SETTINGS ===
# Log file path (relative to project root)
LOG_FILE=logs/bot.log

# Enable file logging (true/false)
ENABLE_FILE_LOGGING=true

# Log rotation settings
MAX_LOG_SIZE_MB=50
MAX_LOG_FILES=5

# === SECURITY SETTINGS ===
# Allowed guild IDs (comma-separated, empty = all guilds)
ALLOWED_GUILDS=

# Bot owner user ID (for admin commands)
BOT_OWNER_ID=

# === PERFORMANCE SETTINGS ===
# Maximum concurrent downloads
MAX_CONCURRENT_DOWNLOADS=3

# Audio buffer size
AUDIO_BUFFER_SIZE=20

# Connection pool size
CONNECTION_POOL_SIZE=10
